<nav>
  <a href="/items">Home ></a>
  <%= breadcrumbs_from_hash(@views_hash, @item).html_safe %>
</nav>
<header>
  <%= render 'form', item: @item %>
</header>
<article>
  <ul class="list">
    <%= render @views_hash[@item.id] %>
  </ul>
</article>
<% if @item.can_edit?(current_user) %>
  <aside>
    <h2>Add Item</h2>
    <%= render 'form', item: @new_item %>
    <%= button_to 'Delete', item_url(@item), method: :delete %>
  </aside>
<% end %>